<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="16dp"
            android:layout_height="wrap_content" android:id="@+id/tensectextview"
            android:textSize="30sp" android:text="0"
            app:layout_constraintStart_toEndOf="@+id/spacingview"
            app:layout_constraintBottom_toBottomOf="@+id/spacingview"
            app:layout_constraintTop_toTopOf="@+id/spacingview"/>

    <TextView
            android:layout_height="wrap_content" android:id="@+id/spacingview"
            android:textSize="30sp"
            android:text=":"
            android:layout_width="9dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.32999998"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/sectextview"
            android:textSize="30sp" android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/spacingview"
            app:layout_constraintTop_toTopOf="@+id/spacingview"
            app:layout_constraintStart_toEndOf="@+id/tensectextview" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mintextview"
            android:textSize="30sp" android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/spacingview"
            app:layout_constraintTop_toTopOf="@+id/spacingview" app:layout_constraintEnd_toStartOf="@+id/spacingview"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tenmintextview"
            android:textSize="30sp" android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/spacingview"
            app:layout_constraintTop_toTopOf="@+id/spacingview" app:layout_constraintEnd_toStartOf="@+id/mintextview"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/StopButton" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/StopButton"/>
    <Button
            android:text="stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:id="@+id/StopButton"/>
    <Button
            android:text="reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ResetButton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/StopButton" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/StopButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="+"
            android:layout_width="27dp"
            android:layout_height="44dp"
            android:id="@+id/plustenminbutton" app:layout_constraintStart_toStartOf="@+id/tenmintextview"
            app:layout_constraintEnd_toEndOf="@+id/tenmintextview" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/tenmintextview"
            android:textSize="8sp"/>
    <Button
            android:text="+"
            android:layout_width="27dp"
            android:layout_height="44dp"
            android:id="@+id/plusminbutton" app:layout_constraintStart_toStartOf="@+id/mintextview"
            app:layout_constraintEnd_toEndOf="@+id/mintextview" app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintTop_toTopOf="@+id/plustenminbutton"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/mintextview"
            android:textSize="8sp" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="+"
            android:layout_width="27dp"
            android:layout_height="44dp"
            android:id="@+id/plustensecbutton" android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/tensectextview"
            app:layout_constraintBottom_toTopOf="@+id/tensectextview" android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/plusminbutton"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="@+id/tensectextview"/>
    <Button
            android:text="+"
            android:layout_width="27dp"
            android:layout_height="44dp"
            android:id="@+id/plussecbutton" android:textSize="8sp"
            app:layout_constraintStart_toStartOf="@+id/sectextview"
            app:layout_constraintEnd_toEndOf="@+id/sectextview"
            app:layout_constraintTop_toTopOf="@+id/plustensecbutton" app:layout_constraintHorizontal_bias="0.4"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/sectextview"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="-"
            android:layout_width="25dp"
            android:layout_height="43dp"
            android:id="@+id/mintenminbutton" android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/tenmintextview"
            app:layout_constraintStart_toStartOf="@+id/tenmintextview"
            app:layout_constraintBottom_toBottomOf="@+id/minminbutton"/>
    <Button
            android:text="-"
            android:layout_width="25dp"
            android:layout_height="43dp"
            android:id="@+id/minminbutton" android:textSize="8sp" app:layout_constraintEnd_toEndOf="@+id/mintextview"
            app:layout_constraintStart_toStartOf="@+id/mintextview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mintextview"/>
    <Button
            android:text="-"
            android:layout_width="26dp"
            android:layout_height="43dp"
            android:id="@+id/mintensecbutton" android:textSize="8sp"
            app:layout_constraintStart_toEndOf="@+id/spacingview"
            app:layout_constraintEnd_toEndOf="@+id/tensectextview"
            app:layout_constraintTop_toBottomOf="@+id/tensectextview"
            app:layout_constraintBottom_toBottomOf="@+id/minminbutton" android:layout_marginTop="8dp"/>
    <Button
            android:text="-"
            android:layout_width="26dp"
            android:layout_height="44dp"
            android:id="@+id/minsecbutton" android:textSize="8sp" app:layout_constraintEnd_toEndOf="@+id/sectextview"
            app:layout_constraintStart_toStartOf="@+id/sectextview" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/sectextview"
            app:layout_constraintBottom_toBottomOf="@+id/mintensecbutton"/>
</android.support.constraint.ConstraintLayout>